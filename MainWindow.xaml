<Window x:Class="CA1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CA1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="1.2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.65*" />
        </Grid.ColumnDefinitions>

        <!-- Ward Listbox -->
        <Label Grid.Column="0" Grid.Row="0"  Content="Ward List (0)"></Label>
        <ListBox  Grid.Column="0" Grid.Row="1"></ListBox>
        <!-- Ward Exander -->
        <Expander Grid.Column="0" Grid.Row="2" Header="Add A New Ward">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Grid.Row="0" Content="First Label" DockPanel.Dock="Left"></Label>
                <TextBox Grid.Column="1"  Grid.Row="0" DockPanel.Dock="Right"></TextBox>

                <Label Grid.Column="0"  Grid.Row="1" Content="Second Label" DockPanel.Dock="Left"></Label>
                <Slider  Grid.Column="1"  Grid.Row="1" DockPanel.Dock="Right"></Slider>


                <Button  Grid.Column="1"  Grid.Row="2" Margin="0 10 0 10" Content="Add Ward" Width="80px"></Button>
            </Grid>
        </Expander>

        <!-- Patient Lisbox -->
        <Label Grid.Column="1" Grid.Row="0" Content="Patients"></Label>
        <ListBox  Grid.Column="0" Grid.Row="1"></ListBox>
        <!-- Patient Exander -->
        <Expander Grid.Column="1" Grid.Row="2" Header="Add A New Patient">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Grid.Row="0" Content="Name" DockPanel.Dock="Left"></Label>
                <TextBox Grid.Column="1"  Grid.Row="0" ></TextBox>


                <Label Grid.Column="0" Grid.Row="1" Content="DOB" DockPanel.Dock="Left"></Label>
                <DatePicker Grid.Column="1" Grid.Row="1"></DatePicker>


                <Label Grid.Column="0" Grid.Row="2" Content="Blood Type" DockPanel.Dock="Left"></Label>
                <StackPanel HorizontalAlignment="Center"  VerticalAlignment="Center" Orientation="Horizontal"  Grid.Column="1" Grid.Row="2">
                    <RadioButton Content="A" Margin="0 0 10 0"></RadioButton>
                    <RadioButton Content="B" Margin="0 0 10 0"></RadioButton>
                    <RadioButton Content="AB" Margin="0 0 10 0"></RadioButton>
                    <RadioButton Content="O"></RadioButton>
                </StackPanel>


                <Button Grid.Column="1" Grid.Row="3" Margin="0 5 0 5" Content="Add Patient" Width="180px"></Button>
            </Grid>
        </Expander>
    
        <!-- Details -->
        <Label Grid.Column="2" Grid.Row="0" Content="Details"></Label>
        <Image Grid.Column="2" Grid.Row="1"></Image>
        <StackPanel VerticalAlignment="Bottom"  Grid.Column="2" Grid.Row="2">
            <Button  Content="Load"></Button>
            <Button  Content="Save"></Button>
        </StackPanel>
        
    </Grid>
</Window>
